@model IEnumerable<ReadyMealViewModels>

@{
    ViewData["Title"] = string.Format(PageTitleResource.StringFormat, PageTitleResource.ReadymealIndex, PageTitleResource.SiteName);
}

<h1>Your Ready Meals</h1>

<div class="main-blank">
   @if (Model.Any())
    {
        foreach (var readyMeal in Model)
        {
            <div class="ingridient" title="@readyMeal.Comment">
                <div class="ingridient__wrapper">

                    <div class="ingridient ingridient__nameIngridient">
                        <a class="ingridient__nameIngridient" asp-controller="ReadyMeal" asp-action="Detail" asp-route-id="@readyMeal.Id">
                            <span>@readyMeal.Name</span>
                        </a>
                    </div>

                    <div class="action__picture">
                        <a asp-controller="ReadyMeal" asp-action="Edit" asp-route-id="@readyMeal.Id">
                            <img src="~/images/edit.svg" width="25" alt="Edit" />
                        </a>
                    </div>

                    <div class="action__picture">
                        <a asp-controller="ReadyMeal" asp-action="Delete" asp-route-id="@readyMeal.Id">
                            <img src="~/images/del.svg" width="25" alt="Delete" />
                        </a>
                    </div>
                </div>
                <div class="description_readymeal">
                    @readyMeal.TeastyMeal
                    @readyMeal.ChildReacrion
                    @readyMeal.Comment
                    @readyMeal.Picture
                    @readyMeal.ReadyTime
                </div>
            </div>
            
        }
    }
    else
    {
        <div>Ready meals are empty</div>
    }
</div>
<a class="button" asp-controller="ReadyMeal" asp-action="Create">Create</a>
<a class="button" asp-controller="Home" asp-action="Index">Back</a>

@section Css {
    <link href="~/css/ingridient.css" rel="stylesheet" />
}

