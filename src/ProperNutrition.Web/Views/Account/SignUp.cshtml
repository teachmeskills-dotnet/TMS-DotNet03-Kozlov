@model SignUpViewModel

@{
    ViewData["Title"] = "SignUp page";
}

<h1>Sign up page</h1>

<form method="post" asp-controller="Account" asp-action="SignUp">
    <div asp-validation-summary="ModelOnly"></div>
    <div >

        <input class="input" asp-for="Email" placeholder="Email" type="email" />
        <span asp-validation-for="Email"></span>
    </div>
    <div>

        <input class="input" asp-for="Applicationusername" placeholder="Name" type="text"/>
        <span asp-validation-for="Applicationusername"></span>
    </div>
    <div>

        <input class="input" asp-for="Password" placeholder="******" type="text"/>
        <span asp-validation-for="Password"></span>
    </div>
    <div>

        <input class="input" asp-for="PasswordConfirm" placeholder="******" type="text"/>
        <span asp-validation-for="PasswordConfirm"></span>
    </div>
    <div>
        <input class="button" type="submit" value="SignUp" />
    </div>
</form>
